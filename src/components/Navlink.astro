---
export interface Props extends astroHTML.JSX.AnchorHTMLAttributes {
  text: string;
  href: string;
}
const { text, href, ...props } = Astro.props as Props;
let isActive;
if (href === "/") {
  isActive = href === Astro.url.pathname;
} else {isActive = Astro.url.pathname.includes(href);}
---

<a
  class:list={["relative text-zinc-200 font-semibold text-sm py-2.5 px-3",{ active: isActive }]}
  href={href}
  {...props}
  aria-label={`Go to ${text}`}
>
<span class:list={[{"active-underline": isActive}]}></span>
{text}
</a>

<style>
  .active {
    @apply text-blue-500;
  }
  .active-underline {
    @apply absolute inset-x-1 -bottom-px h-px bg-blue-500
  }
</style>
