---
export interface Props {
  text: string;
}
const { text } = Astro.props as Props;
---
<span class="absolute delay-100 capitalize bg-white dark:bg-zinc-700 shadow -top-12 pointer-events-none w-auto min-w-max px-2 py-0.5 rounded-md opacity-0 sm:group-focus:opacity-100 transition-opacity sm:group-hover:opacity-100 dark:text-zinc-300 text-zinc-500">
{text}
</span>