---
export interface Props {
  text: string
}
const { text } = Astro.props as Props
---

<span
  class='absolute py-1 delay-100 dark:border-zinc-600 duration-300 dark:shadow-black/60 bg-white dark:bg-zinc-700 shadow font-medium -top-[3.25rem] text-sm pointer-events-none w-auto min-w-max px-2 dark:border-t rounded-md opacity-0 sm:group-focus:opacity-100 transition-opacity sm:group-hover:opacity-100 dark:text-zinc-300 text-zinc-600'
>
  {text}
</span>
