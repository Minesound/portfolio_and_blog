---
export interface Props {
  title: string;
  description: string;
  publishDate: string;
}
let { title, description, publishDate } = Astro.props as Props;
publishDate = new Date(publishDate).toLocaleDateString('en', {dateStyle: 'full',});
---
<a class="group block rounded-xl bg-white p-6 leading-relaxed text-gray-600 shadow hover:shadow-md dark:bg-gray-800 dark:text-gray-400 dark:shadow-black/40 transition-shadow duration-300">
  <h2 class="text-lg inline-block font-semibold leading-relaxed text-gray-900 group-hover:text-transparent group-hover:bg-clip-text group-hover:animate-move-bg group-hover:bg-gradient-to-r group-hover:bg-[length:400%] group-hover:from-indigo-500 group-hover:via-pink-500 group-hover:to-indigo-500 dark:text-white">{title}</h2>
  <time datetime={publishDate} class="text-gray-500 dark:text-gray-400 text-sm block">{publishDate}</time>
  <p class="mt-2 leading-relaxed">{description}</p>
</a>