---
import AppLayout from '@layouts/AppLayout.astro'
import { Picture } from 'astro-imagetools/components'
const { content } = Astro.props
const { title, description, heroImage } = content
const publishDate = new Date(content.publishDate).toLocaleDateString('en', {
  dateStyle: 'full',
})
---

<AppLayout {title} {description} {heroImage}>
  <a
    class="text-zinc-600 mb-4 focus:outline-none focus:text-zinc-900 focus:underline dark:focus:text-white hover:text-zinc-900 dark:text-zinc-400 dark:hover:text-white inline-flex items-center py-0.5 rounded-full text-sm"
    href="/blog"
  >
    <svg
      xmlns="http://www.w3.org/2000/svg"
      class="h-auto w-4 mr-1"
      fill="none"
      viewBox="0 0 24 24"
      stroke="currentColor"
      stroke-width="2"
    >
      <path stroke-linecap="round" stroke-linejoin="round" d="M7 16l-4-4m0 0l4-4m-4 4h18"></path>
    </svg>
    back to blog
  </a>
  <header class="flex flex-col justify-center items-center">
    <p class="text-center text-zinc-600 dark:text-zinc-400 mb-1 text-sm">
      {publishDate}
    </p>
    <h1
      class="text-4xl mb-6 sm:leading-tight sm:text-5xl font-sans font-bold text-center text-transparent bg-clip-text bg-gradient-to-r from-indigo-500 to-pink-500"
    >
      {title}
    </h1>
    <div class="inline-flex gap-2 justify-center items-center">
      <div class="aspect-square rounded-full overflow-hidden w-10 h-10">
        <Picture
          src="/public/assets/me.jpeg"
          height={80}
          width={80}
          loading="eager"
          alt="Picture of the author"
          layout="fixed"
        />
      </div>
      <p class="text-zinc-600 dark:text-zinc-400 text-sm">
        <span class="block font-semibold">Kevin Zuniga Cuellar</span>
        <a
          class="text-blue-600 dark:text-blue-400 focus:outline-none focus:underline hover:underline focus:font-medium hover:font-medium block"
          href="https://twitter.com/kevinzunigacuel"
          target="_blank"
          rel="noopener noreferrer">@kevinzunigacuel</a
        >
      </p>
    </div>
    <div class="rounded-xl w-full overflow-hidden mt-8 mb-12">
      <Picture src={heroImage} alt={title} loading="eager" />
    </div>
  </header>
  <article
    class="prose prose-zinc focus:prose-a:outline-none prose-code:before:content-none prose-code:after:content-none dark:prose-code:text-pink-400 prose-code:text-pink-600 prose-a:text-pink-600 dark:prose-a:text-pink-400 max-w-none hover:prose-a:underline focus:prose-a:underline prose-a:no-underline dark:prose-invert prose-img:m-0 prose-headings:text-indigo-600 dark:prose-headings:text-indigo-400"
  >
    <slot />
  </article>
</AppLayout>
